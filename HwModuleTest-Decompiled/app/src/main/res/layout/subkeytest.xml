<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/background" android:layout_width="match_parent" android:layout_height="match_parent">
        <Button android:textSize="20sp" android:textStyle="bold" android:layout_gravity="center" android:id="@+id/button_exit" android:focusable="false" android:visibility="gone" android:layout_width="100dp" android:layout_height="wrap_content" android:text="@string/exit" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/home_holder" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp">
        <ImageView android:layout_gravity="center" android:id="@+id/aod_home_icon" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/ic_home_button" android:scaleType="fitXY" android:tint="#99fafafa"/>
    </LinearLayout>
</FrameLayout>
