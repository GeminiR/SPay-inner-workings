<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="30sp" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/frequency_test"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp">
        <ToggleButton android:id="@+id/freq_100" android:layout_width="match_parent" android:layout_height="100dp" android:textOn="@string/frequency_100" android:textOff="@string/frequency_100" android:layout_weight="1"/>
        <ToggleButton android:id="@+id/freq_200" android:layout_width="match_parent" android:layout_height="100dp" android:textOn="@string/frequency_200" android:textOff="@string/frequency_200" android:layout_weight="1"/>
        <ToggleButton android:id="@+id/freq_300" android:layout_width="match_parent" android:layout_height="100dp" android:textOn="@string/frequency_300" android:textOff="@string/frequency_300" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
