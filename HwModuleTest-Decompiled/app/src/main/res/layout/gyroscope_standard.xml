<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/background" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="30sp" android:gravity="center" android:id="@+id/gyro_title" android:paddingLeft="4dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/GYROSCOPE_Sensor"/>
    <TextView android:textSize="16sp" android:id="@+id/gyro_zero_rate" android:paddingLeft="4dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <View android:background="@drawable/separator" android:layout_width="match_parent" android:layout_height="1dp"/>
    <TableLayout android:id="@+id/menu" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="@drawable/separator" android:layout_width="match_parent" android:layout_height="1dp"/>
        <TableRow>
            <TextView android:textSize="16sp" android:id="@+id/invisible" android:visibility="invisible" android:layout_weight="4"/>
            <TextView android:textSize="16sp" android:id="@+id/strX" android:text="@string/X" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/strY" android:text="@string/Y" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/strZ" android:text="@string/Z" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/strResult" android:text="@string/result" android:layout_weight="3"/>
        </TableRow>
        <TableRow>
            <TextView android:textSize="16sp" android:id="@+id/sub1_str" android:text="@string/gyroscope_fifo_zro" android:layout_weight="4"/>
            <TextView android:textSize="16sp" android:id="@+id/fifo_zro_x" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/fifo_zro_y" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/fifo_zro_z" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/fifo_zro_result" android:layout_weight="3"/>
        </TableRow>
        <TableRow>
            <TextView android:textSize="16sp" android:id="@+id/sub2_str" android:text="@string/gyroscope_self_zro" android:layout_weight="4"/>
            <TextView android:textSize="16sp" android:id="@+id/zro_x_str" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/zro_y_str" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/zro_z_str" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/zro_selftest_result" android:layout_weight="3"/>
        </TableRow>
        <TableRow>
            <TextView android:textSize="16sp" android:id="@+id/sub3_str" android:text="@string/gyroscope_self_bias" android:layout_weight="4"/>
            <TextView android:textSize="16sp" android:id="@+id/bias_x_str" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/bias_y_str" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/bias_z_str" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/bias_result" android:layout_weight="3"/>
        </TableRow>
        <TableRow>
            <TextView android:textSize="16sp" android:id="@+id/sub4_str" android:text="@string/gyroscope_self_diff" android:layout_weight="4"/>
            <TextView android:textSize="16sp" android:id="@+id/diff_x_str" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/diff_y_str" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/diff_z_str" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:id="@+id/diff_selftest_result" android:layout_weight="3"/>
        </TableRow>
    </TableLayout>
    <View android:background="@drawable/separator" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:id="@+id/gyro_test" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/RESULT" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:id="@+id/gyro_test_result" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <TextView android:textSize="40sp" android:gravity="center" android:id="@+id/result" android:paddingLeft="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
</LinearLayout>
