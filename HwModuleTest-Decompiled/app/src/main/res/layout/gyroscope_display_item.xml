<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TableLayout android:id="@+id/history" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="4">
        <TableRow>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/measured_count" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="1" android:text="@string/gyro_disp_try_count"/>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/measured_value_x" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="1" android:text="@string/gyro_disp_x_value"/>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/measured_value_y" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="2" android:text="@string/gyro_disp_y_value"/>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/measured_value_z" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="3" android:text="@string/gyro_disp_z_value"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
